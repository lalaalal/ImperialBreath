@page
@model UpdateModel
@{
    ViewData["Title"] = "Update";
}

<div id="update-wrapper">
    <div id="add-task" class="card">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Add Task</h4>
            <hr>
            <form action="/tasks/update" method="get">
                <div class="form-group">
                    <input type="hidden" name="taskId" value="@Model.Task.TaskId" />
                    <div class="input-group">
                        <input type="text" class="form-control" value="@Model.Subjects.First(subject => subject.SubjectId == Model.Task.SubjectId).Name" disabled />
                    </div>
                </div> <!-- form-group// -->
                <div class="form-group">
                    <div class="input-group">
                        <input name="summary" class="form-control" placeholder="summary" type="text" value="@Model.Task.Summary" required>
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <div class="form-group">
                    <div class="input-group">
                        <textarea name="content" class="form-control" placeholder="content" type="text" value="@Model.Task.Content"></textarea>
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <div class="form-group">
                    <div class="input-group">
                        <input name="deadLine" class="form-control" placeholder="deadLine (YYYY-MM-DD)" type="datetime" value="@Model.Task.Deadline" required>
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Update  </button>
                </div> <!-- form-group// -->
            </form>
        </article>
    </div> <!-- card.// -->
</div>